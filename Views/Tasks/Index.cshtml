@model List<TaskItem>
@{
    ViewData["Title"] = "Tarefas";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Lista de Tarefas</h1>

    <div class="mb-3 text-end">
        <a class="btn btn-primary" asp-action="Create">+ Adicionar Nova Tarefa</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Nenhuma tarefa cadastrada ainda.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover align-middle">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Descrição</th>
                    <th>Status</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Id</td>
                        <td>@task.Description</td>
                        <td>
                            @if (task.IsCompleted)
                            {
                                <span class="badge bg-success">Concluída</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pendente</span>
                            }
                        </td>
                        <td class="text-center">
                            @if (!task.IsCompleted)
                            {
                                <form asp-action="MarkComplete" asp-route-id="@task.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-success" title="Marcar como concluída">
                                        ✓
                                    </button>
                                </form>
                            }
                            <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-primary" title="Editar">
                                ✎
                            </a>
                            <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-danger" title="Excluir">
                                🗑
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
