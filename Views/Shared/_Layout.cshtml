<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskManagerWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskManagerWeb.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom box-shadow mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="Tasks" asp-action="Index">
                    TaskManagerWeb
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Tasks" asp-action="Index">Tarefas</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Tasks" asp-action="Create">Criar</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Tasks" asp-action="Edit">Editar</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Tasks" asp-action="Delete">Excluir</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-5 bg-white shadow-sm rounded p-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3 bg-light mt-5">
        <div class="container text-center">
            &copy; 2025 - Gustavo da Costa
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
